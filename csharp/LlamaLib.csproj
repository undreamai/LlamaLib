<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net6.0;net8.0;netstandard2.0</TargetFrameworks>
    <LangVersion>latest</LangVersion>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <Platforms>AnyCPU;x64;ARM64</Platforms>
  </PropertyGroup>

  <!-- Conditional compilation symbols -->
  <PropertyGroup Condition="'$(RuntimeIdentifier)' == 'win-x64' OR '$(OS)' == 'Windows_NT'">
    <DefineConstants>$(DefineConstants);WINDOWS</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(RuntimeIdentifier)' == 'linux-x64'">
    <DefineConstants>$(DefineConstants);LINUX</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(RuntimeIdentifier)' == 'osx-x64' OR '$(RuntimeIdentifier)' == 'osx-arm64'">
    <DefineConstants>$(DefineConstants);MACOS</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(RuntimeIdentifier)' == 'android-arm64' OR '$(RuntimeIdentifier)' == 'android-x64'">
    <DefineConstants>$(DefineConstants);ANDROID</DefineConstants>
  </PropertyGroup>
  
  <PropertyGroup Condition="'$(RuntimeIdentifier)' == 'ios-arm64'">
    <DefineConstants>$(DefineConstants);IOS</DefineConstants>
  </PropertyGroup>
  
  <PropertyGroup Condition="'$(RuntimeIdentifier)' == 'visionos-arm64'">
    <DefineConstants>$(DefineConstants);VISIONOS</DefineConstants>
  </PropertyGroup>

  <!-- Native libraries for Windows x64 -->
  <ItemGroup Condition="'$(RuntimeIdentifier)' == 'win-x64' OR ('$(RuntimeIdentifier)' == '' AND '$(OS)' == 'Windows_NT')">
    <Content Include="runtimes/windows/*.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <PackagePath>runtimes/windows</PackagePath>
    </Content>
  </ItemGroup>

  <!-- Native libraries for Linux x64 -->
  <ItemGroup Condition="'$(RuntimeIdentifier)' == 'linux-x64' OR ('$(RuntimeIdentifier)' == '' AND '$(OS)' != 'Windows_NT')">
    <Content Include="runtimes/linux/*.so">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <PackagePath>runtimes/linux</PackagePath>
    </Content>
  </ItemGroup>
  <!-- Native libraries for macOS x64 -->
  <ItemGroup Condition="'$(RuntimeIdentifier)' == 'osx-x64'">
    <Content Include="runtimes/macos/*.dylib">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <PackagePath>runtimes/macos</PackagePath>
    </Content>
  </ItemGroup>
  
  <!-- Native libraries for macOS ARM64 -->
  <ItemGroup Condition="'$(RuntimeIdentifier)' == 'osx-arm64'">
    <Content Include="runtimes/macos/*.dylib">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <PackagePath>runtimes/macos</PackagePath>
    </Content>
  </ItemGroup>

  <!-- Native libraries for Android ARM64 -->
  <ItemGroup Condition="'$(RuntimeIdentifier)' == 'android-arm64'">
    <Content Include="runtimes/android/*arm64.so">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <PackagePath>runtimes/android</PackagePath>
    </Content>
  </ItemGroup>
  
  <!-- Native libraries for Android x64 -->
  <ItemGroup Condition="'$(RuntimeIdentifier)' == 'android-x64'">
    <Content Include="runtimes/android/*x64.so">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <PackagePath>runtimes/android</PackagePath>
    </Content>
  </ItemGroup>

  <!-- Native libraries for iOS -->
  <ItemGroup Condition="'$(RuntimeIdentifier)' == 'ios-arm64'">
    <Content Include="runtimes/ios/*.a">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <PackagePath>runtimes/ios</PackagePath>
    </Content>
  </ItemGroup>

  <!-- Native libraries for visionOS -->
  <ItemGroup Condition="'$(RuntimeIdentifier)' == 'visionos-arm64'">
    <Content Include="runtimes/visionos/*.a">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <PackagePath>runtimes/visionos</PackagePath>
    </Content>
  </ItemGroup>

</Project>